[
    {
        "verbose": "sends when ws connection is esteblished",
        "response": {
            "status": "STATUS_TOKEN",
            "payload": {
                "user_token": ""
            }
        }
    },
    {
        "verbose": "returns list of existing rooms",
        "requset": {
            "signal": "lobby_list"
        },
        "response": {
            "status": "STATUS_OK",
            "payload": [ 
                { 
                    "room_token": "", 
                    "room_type": "" 
                } 
            ]
        }
    },
    {
        "verbose": "create a new room of a type",
        "requset": {
            "signal": "lobby_create",
            "payload": {
                "room_type": ""
            }
        },
        "response": {
            "status": "STATUS_OK",
            "payload": { 
                "room_token": "" 
            }
        }
    },
    {
        "verbose": "delete the room",
        "requset": {
            "signal": "lobby_delete",
            "payload": { 
                "room_token": "" 
            }
        }
    },
    {
        "verbose": "add into the room",
        "requset": {
            "signal": "add_to_room",
            "payload": { 
                "room_token": "" 
            }
        }
    },
    {
        "verbose": "remove from the room",
        "requset": {
            "signal": "remove_from_room",
            "payload": { 
                "room_token": "" 
            }
        }
    },
    {
        "verbose": "add into a random room with deffinded number of players",
        "phases": [
            {
                "request": {
                    "signal": "quick_search",
                    "payload": {
                        "player_count": "2|3|4"
                    }
                }
            },
            {
                "verbose": "abort the serach",
                "request": {
                    "signal": "quick_search_abort"
                }
            }, 
            {
                "verbose": "someone added or removed",
                "response": {
                    "status": "quick_search_status",
                    "payload": {
                        "members": [ 
                            {
                                "user_token": ""
                            }
                        ]
                    }
                }
            },
            {
                "verbose": "game found. Need to accept the invite or send 'no' or take out of time",
                "response": {
                    "status": "quick_search_ready",
                    "payload": {
                        "players_ready": 4,
                        "accept_timeout": 30
                    }
                }
            },
            {
                "verbose": "accept a found game. If time is over or ansver is 'no' - kick. If someone else failed it - back to serch stage",
                "request": {
                    "signal": "quick_search_accept",
                    "payload": "yes|no"
                },
                "response": {
                    "case_1": {
                        "status": "created",
                        "payload": {
                            "room_token": ""
                        }
                    },
                    "case_2": {
                        "status": "failed"
                    }
                }
            }
        ]
    }
]
